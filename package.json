{
  "private": true,
  "scripts": {
    "test": "cd packages/dendriform && yarn test",
    "lint": "cd packages/dendriform && yarn lint",
    "build": "cd packages/dendriform && yarn build",
    "size": "cd packages/dendriform && yarn size",
    "build-docs": "cp README.md packages/dendriform/README.md && cd packages/dendriform-demo && yarn build && yarn export",
    "prep": "yarn && yarn lerna bootstrap",
    "bump": "yarn lerna publish -m \"build: publish\"",
    "reinstall": "rm -rf node_modules && rm -rf packages/*/node_modules && yarn prep"
  },
  "dependencies": {
    "lerna": "^3.10.7"
  },
  "workspaces": {
    "packages": ["packages/*"],
    "nohoist": ["**/tsdx", "**/tsdx/**"]
  }
}
